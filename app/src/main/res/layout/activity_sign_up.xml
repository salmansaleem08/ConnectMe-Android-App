<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/connect"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/great"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great!"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="10dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We're so excited to get you onboard!"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:textAlignment="center" />
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />
    </LinearLayout>


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            android:textSize="18sp"
            android:textColorHint="#808080"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            android:textSize="18sp"
            android:textColorHint="#808080"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            android:textSize="18sp"
            android:textColorHint="#808080"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            android:textSize="18sp"
            android:textColorHint="#808080"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_background"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/clickingAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By clicking Agree and continue below, I agree to"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/termsOfService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/underlined_text2"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#58432E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" and "
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/underlined_text3"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#58432E" />
        </LinearLayout>

        <Button
            android:id="@+id/signup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:backgroundTint="#58432E"
            android:background="@drawable/roundedrectangle"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:padding="15dp" />




        <LinearLayout
            android:id="@+id/login1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login2"
                android:text=" Login"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#58432E" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
