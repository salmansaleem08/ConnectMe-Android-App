<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

    <!-- Transparent Background -->
    <solid android:color="@android:color/transparent"/>

    <!-- Rounded Corners (Optional) -->
    <corners android:radius="10dp"/>

    <!-- Stroke (Only Bottom Border) -->
    <stroke android:width="0dp" android:color="@android:color/transparent"/>  <!-- No full border -->

    <padding android:bottom="-4dp"/>  <!-- Negative padding to place line inside -->

    <size android:height="50dp"/> <!-- Adjust height for visibility -->

    <!-- Bottom Line -->
    <stroke android:width="3dp" android:color="#58432E"/>  <!-- 3dp thick yellow bottom line -->

</shape>
